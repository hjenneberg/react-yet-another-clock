{
    "compilerOptions": {
        "rootDirs": ["src", "stories"],
        "outDir": "./lib",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "es6",
        "target": "es2016",
        "jsx": "react",
        "types": ["react", "jest"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
    "exclude": [
        "**/*.test.ts",
        "node_modules"
    ],
    "jest": {
        "globals": {
            "ts-jest": {
                "disableSourceMapSupport": true
            }
        }
    }
}
